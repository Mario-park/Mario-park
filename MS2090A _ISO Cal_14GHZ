# for 9 GHz
Freq = "9"
time.sleep(1)
SG.write('CF1 9 GH')
sensor.write('SNCFRQ A,9GHZ')
dut.write(':SENSe:FREQuency:CENTer 9 GHZ')
time.sleep(2)
