# for 7 GHz
Freq = "7"
time.sleep(1)
SG.write('CF1 7 GH')
sensor.write('SNCFRQ A,7GHZ')
dut.write(':SENSe:FREQuency:CENTer 7 GHZ')
time.sleep(2)
