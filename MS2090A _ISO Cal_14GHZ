time.sleep(1)
outfile.write(str(Freq) + "," + "0" + "," + sensor.query("CWO 1") + "," + dut.query(':CALC:MARK:Y?') + "\n")

# for 3 GHz
Freq = "3"
time.sleep(1)
SG.write('CF1 3 GH')
sensor.write('SNCFRQ A,3GHZ')
dut.write(':SENSe:FREQuency:CENTer 3 GHZ')
time.sleep(2)
SG.write('RF1')
time.sleep(1)
dut.write(':CALC:MARK:MAXimum')
time.sleep(1)
outfile.write(str(Freq) + "," + "0" + "," + sensor.query("CWO 1") + "," + dut.query(':CALC:MARK:Y?') + "\n")

# for 5 GHz
Freq = "5"
time.sleep(1)
SG.write('CF1 5 GH')
sensor.write('SNCFRQ A,5GHZ')
dut.write(':SENSe:FREQuency:CENTer 5 GHZ')
time.sleep(2)
