outfile.write(str(Freq) + "," + "0" + "," + sensor.query("CWO 1") + "," + dut.query(':CALC:MARK:Y?') + "\n")

SG.write('RF0')

# for 1 absoulte verification GHz
Freq = "1"
time.sleep(1)
SG.write('CF1 1 GH')
sensor.write('SNCFRQ A,1GHZ')
dut.write(':SENSe:FREQuency:CENTer 1 GHZ')
dut.write('DISP:WIND:TRAC:Y:SCAL:RLEV 10')
time.sleep(2)
SG.write('L1 -4 dm')
SG.write('RF1')
time.sleep(1)
dut.write(':CALC:MARK:MAXimum')
time.sleep(10)
outfile.write(str(Freq) + "," + "-10" + "," + sensor.query("CWO 1") + "," + dut.query(':CALC:MARK:Y?') + "\n")

dut.write('DISP:WIND:TRAC:Y:SCAL:RLEV 0')
time.sleep(2)
SG.write('L1 -14 dm')
SG.write('RF1')
time.sleep(1)
dut.write(':CALC:MARK:MAXimum')
time.sleep(10)
outfile.write(str(Freq) + "," + "-20" + "," + sensor.query("CWO 1") + "," + dut.query(':CALC:MARK:Y?') + "\n")

dut.write('DISP:WIND:TRAC:Y:SCAL:RLEV -10')
time.sleep(2)
SG.write('L1 -24 dm')
SG.write('RF1')
time.sleep(1)
dut.write(':CALC:MARK:MAXimum')
time.sleep(10)
outfile.write(str(Freq) + "," + "-30" + "," + sensor.query("CWO 1") + "," + dut.query(':CALC:MARK:Y?') + "\n")

dut.write('DISP:WIND:TRAC:Y:SCAL:RLEV -20')
time.sleep(2)
SG.write('L1 -34 dm')
SG.write('RF1')
time.sleep(1)
dut.write(':CALC:MARK:MAXimum')
time.sleep(20)
outfile.write(str(Freq) + "," + "-40" + "," + sensor.query("CWO 1") + "," + dut.query(':CALC:MARK:Y?') + "\n")

dut.write('DISP:WIND:TRAC:Y:SCAL:RLEV -20')
time.sleep(2)
SG.write('L1 -44 dm')
SG.write('RF1')
time.sleep(1)
dut.write(':CALC:MARK:MAXimum')
time.sleep(40)
outfile.write(str(Freq) + "," + "-50" + "," + sensor.query("CWO 1") + "," + dut.query(':CALC:MARK:Y?') + "\n")

SG.write('RF0')
dut.write('DISP:WIND:TRAC:Y:SCAL:RLEV 10')

#결과파일 닫기
outfile.close()

end_time = time.time()
print("The Job Took " + str(end_time - start_time) + " seconds.")
